@model RentingSystemMVC.Models.VehicleType
@{
    ViewData["Title"] = "Create Vehicle Type";
}

<h2>Create New Vehicle Type</h2>

@if (!ViewData.ModelState.IsValid)
{
<br>
<div class="alert alert-danger" style="text-align:center;">
    @ViewData.ModelState[string.Empty].Errors[0].ErrorMessage
</div>
}

<form asp-action="CreateVehicleType" method="post">
    <div class="form-group">
        <label asp-for="Brand" class="control-label"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" asp-items="@(new SelectList(ViewBag.Types))" class="form-control" required></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Seats" class="control-label"></label>
        <select asp-for="Seats" class="form-select" aria-label="Default select example" required>
            @for (int i = 2; i <= 9; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Seats" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FuelCapacity" class="control-label"></label>
        <input asp-for="FuelCapacity" class="form-control" pattern="^\d+(\.\d{2})?$" required />
        <span asp-validation-for="FuelCapacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FuelType" class="control-label"></label>
        <select class="form-select" aria-label="Default select example" asp-for="FuelType" id="FuelType" name="FuelType" placeholder="Enter fuel type" required>
            <option selected value="Petrol">Petrol</option>
            <option value="Diesel">Diesel</option>
        </select>
        <span asp-validation-for="FuelType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TrunkSpace" class="control-label"></label>
        <input asp-for="TrunkSpace" class="form-control" pattern="^\d+(\.\d{2})?$" required />
        <span asp-validation-for="TrunkSpace" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RentalCostPerDay" class="control-label"></label>
        <input asp-for="RentalCostPerDay" class="form-control" pattern="^\d+(\.\d{2})?$" required />
        <span asp-validation-for="RentalCostPerDay" class="text-danger"></span>
    </div>
    <div class="form-group">
        <br />
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="CreateVehicle" class="btn btn-secondary">Back to Create Vehicle</a>
    </div>
</form> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
