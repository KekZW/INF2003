@model List<RentingSystemMVC.Models.VehicleViewModel>

<div class="container">
    <h1> Manage Vehicles </h1>
    <div class="row">
        <div class="col-4">
            @* TODO: Functionality for search *@
            <form asp-action="Manage" method="get">
                <div class="input-group mb-3">
                    <input id="searchTerm" name="searchTerm" type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
                </div>
            </form>
        </div>
        <div class="col-8 text-end">
            <a asp-controller="Vehicles" asp-action="CreateVehicle" class="btn btn-primary"  method="get">Add new vehicle</a>
        </div>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>License Plate</th>
            <th>License To Operate</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Type</th>
            <th>Seats</th>
            <th>Fuel Capacity</th>
            <th>Fuel Type</th>
            <th>Truck Space</th>
            <th>Rental Cost Per Day</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var vehicle in Model)
        {
            <tr>
                <td>@vehicle.LicensePlate</td>
                <td>@vehicle.LicenseToOperate</td>
                <td>@vehicle.Brand</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.Type</td>
                <td>@vehicle.Seats</td>
                <td>@vehicle.FuelCapacity</td>
                <td>@vehicle.FuelType</td>
                <td>@vehicle.TrunkSpace</td>
                <td>@vehicle.RentalCostPerDay</td>
                <td>
                    <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@vehicle.VehicleID" class="btn btn-primary">View</a>
                    <a onclick="getAllVehicleHistory(@vehicle.VehicleID,1)" class="btn btn-primary">History</a>
                    
                </td>
            </tr>
        }
        </tbody>
    </table>


     <div class="modal fade" id="viewRentalHistoryModal" tabindex="-1" role="dialog" aria-labelledby="viewRentalHistoryModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewRentalHistoryModalLabel">View Rental History</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination" id="pagination">
                            <!-- Pagination links will be loaded here by JavaScript -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <script>

            function getAllVehicleHistory(vehicleID, pageNumber) {
                $.ajax({
                    url: "/Vehicles/getAllRentalHistory",
                    type: "GET",
                    data: { "vehicleID": vehicleID, "pageNumber": pageNumber , "pageSize":2},
                    success: function (response) {
                        $('.modal-body').empty();
                        if (response.success) {
                            
                            $.each(response.paginatedTotalItems, function (index, history) {
                                $('.modal-body').append(
                                '<div style="margin-bottom:10px;" class="card">' +
                                    '<div class="card-body">'+ 
                                        '<div class="card-header">'+
                                            "<p> Rental ID: " + history.rentalID +
                                            "</p><p> User ID: " + history.userID + 
                                            "</p><p> Name: "+ history.name + 
                                            "</p>"
                                        +'</div> <ul class="list-group list-group-flush">' +  
                                        "<li class='list-group-item'> Start Rental: " + history.startRentalDate + "</li>"
                                        + "<li class='list-group-item'> End Rental: " + history.endRentalDate + "</li>"
                                        + "<li class='list-group-item'> Status: " + history.status + "</li>"
                                        + "</ul>"
                                    +'</div>' 
                                +'</div>');
                            });

                            // Update pagination links
                            updatePagination(vehicleID,response.pageNumber, response.pageSize, response.totalItemsCount);
                        }else {
                            $('.modal-body').append("<div> There is no existing rental history</div>")
                        }
                    }
                });

                $('#viewRentalHistoryModal').modal('show');
            }

            function updatePagination(vehicleID,currentPage, pageSize, totalItems) {
                var totalPages = Math.ceil(totalItems / pageSize);
                var paginationHtml = '';
                for (var i = 1; i <= totalPages; i++) {
                    paginationHtml += '<li class="page-item ' + (i === currentPage ? 'active' : '') + '">';
                    paginationHtml += '<a class="page-link" href="javascript:void(0);" onclick="getAllVehicleHistory(\'' + vehicleID + '\', ' + i + ');">' + i + '</a>';
                    paginationHtml += '</li>';
                }

                $('#pagination').html(paginationHtml);
            }
        </script>
    }


</div>