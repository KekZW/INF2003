@model List<RentingSystemMVC.Models.Promotion>;
<div class="container">
    <style>
    .card {
        margin-bottom:10px; 
    }
    </style>
    <div class="row align-items-center">
        <div class="col">
            <h1>Manage Promotion</h1>
        </div>
        <div class="col text-end">
            <a class="btn btn-dark" onclick="openPromoModal()">Add New Promotion Code</a>
        </div>
    </div>

    <div style="display:flex;">
    @foreach (var promotion in Model){
   <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Promotion Code: @promotion.promotionCode</h5>
            <h5 class="card-title">Expiry Date: @promotion.ExpiryDate.ToString("dd/MM/yyyy") </h5>
            <h5 class="card-title">Discount Rate: @promotion.discountRate%</h5>
        </div>
        </div>

    } 

    </div>

    <!-- Add Promotion -->
    <div class="modal fade" id="promotionModal" tabindex="-1" role="dialog" aria-labelledby="maintenanceModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="promoModalLabel">New Promotion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="promoForm">
                        <div class="form-group">
                            <label for="promoCode">Promotion Code</label>
                            <input type="text" class="form-control" id="promotionCode" name="promotionCode" required/>
                        </div>
                        <div class="form-group mt-1">
                            <label for="expiryDate">Expiry Date</label>
                            <input value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" type="date" class="form-control" id="ExpiryDate" name="ExpiryDate" required/>
                        </div>
                        <div class="form-group mt-1">
                            <label for="discountRate">Description (by percentage)</label>
                            <select class="form-select" aria-label="Default select example" id="discountRate" name="discountRate" required>
                                @for (int i = 5; i <= 100; i+=5) {
                                    <option value="@i">@i%</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts
    {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    
    <script>
        function openPromoModal(){
            $("#promotionModal").modal("show");
        }

        $(document).ready(function () {
            $('#promoForm').on('submit', function (event) {
                event.preventDefault();

                var formData = $(this).serialize();

                $.ajax({
                    url: '/Promotion/postPromotions',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        location.reload();
                    },
                    error: function () {
                        alert('Unavailable to add the data.');
                    }
                });
            });
        });
    
    </script>
    
    }
</div>